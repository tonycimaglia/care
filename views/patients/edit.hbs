<div class="formContainer">

    <h1>Patient Info</h1>
    <div>
        <form action="/users/{{userId}}/patients/{{patient._id}}?_method=PUT" method="POST">
            <div class="form-input">
                <label for="roomNumber">Room Number</label>
                <input type="text" name="roomNumber" value="{{patient.roomNumber}}" required/>
            </div>
            <div class="form-input">
                <label for="miscInfo">Miscellaneous Info</label>
                <input type="text" name="miscInfo" value="{{patient.miscInfo}}" required/>
            </div>
            <div class="createCanelContainer">
                <input class="button primary" type="submit" value="Update">
                <a href="/users/{{userId}}" class="cancelButton">Cancel</a>
            </div>
        </form>
    </div>
</div>