                <label for="name">Name:</label>
                <input type="text" name="name" required/>
            </div>

            <div class="form-input">
                <label for="phoneNumber">Phone Number:</label>
                <input type="Number" name="phoneNumber" required/>
            </div>

            <div class="form-input">
                <label for="floor">Floor:</label>
                <input type="text" name="floor" required/>
            </div>
            <div class="createCanelContainer">
                {{!-- <input class="button primary" type="submit" value="Create Nurse"> --}}
                <a href="/users"><input class="button primary" type="submit" disabled="disabled" value="Create Nurse"></a>
                <a href="/users" class="cancelButton">Cancel</a>
            </div>
        </form>
    </div>
</div>