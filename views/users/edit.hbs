<div>
    <h1>Edit {{user.name}}'s Info</h1>
    <div>
        <form action="/users/{{user._id}}?_method=PUT" method="POST">
            <div class="form-input">
                <label for="name">Name</label>
                <input type="text" name="name" value="{{user.name}}" required/>
            </div>

            <div class="form-input">
                <label for="phoneNumber">Phone Number</label>
                <input type="Number" name="phoneNumber" value="{{user.phoneNumber}}" required/>
            </div>

            <div class="form-input">
                <label for="floor">Floor</label>
                <input type="text" name="floor" value="{{user.floor}}" required/>
            </div>
            <div>
                <input class="button primary" type="submit" value="Update Nurse">
                <a href="/users/{{user._id}}">Cancel</a>
            </div>
        </form>
    </div>
</div>